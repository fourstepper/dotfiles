// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "context": "Workspace",
    "bindings": {
      // "shift shift": "file_finder::Toggle"
    }
  },
  {
    "context": "Editor",
    "bindings": {
      // "j k": ["workspace::SendKeystrokes", "escape"]
    }
  },
  {
    "context": "Workspace",
    "bindings": {
      "cmd-k": [
        "projects::OpenRecent",
        {
          "create_new_window": false
        }
      ]
    }
  },
  {
    "context": "Editor && VimControl && !VimWaiting && !menu",
    "bindings": {
      "space v": "pane::SplitRight",
      "space w": "pane::SplitDown"
    }
  },
  {
    "bindings": {
      "alt-h": ["workspace::ActivatePaneInDirection", "Left"],
      "alt-l": ["workspace::ActivatePaneInDirection", "Right"],
      "alt-k": ["workspace::ActivatePaneInDirection", "Up"],
      "alt-j": ["workspace::ActivatePaneInDirection", "Down"]
    }
  },
  {
    "context": "Editor && VimControl && !VimWaiting && !menu",
    "bindings": {
      "space o": "tab_switcher::Toggle"
    }
  },
  {
    "context": "Editor && VimControl && !VimWaiting && !menu",
    "bindings": {
      "ctrl-p": "file_finder::Toggle"
    }
  },
  {
    "bindings": {
      "ctrl-g": "pane::DeploySearch"
    }
  }
]
